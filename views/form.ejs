   <form id="form" action="/form" method="POST">
        <ul>
           <li>
               <label for="">FirstName</label>
               <input type="text" name="fname" value="<%=typeof fname !='undefined'? fname:''%>" autocomplete='off'>
           </li>
           <li>
            <label for="">MiddleName</label>
            <input type="text" name="mname" value="<%=typeof mname !='undefined'? mname:''%> " autocomplete='off'>
        </li>
        <li>
            <label for="">LastName</label>
            <input type="text" name="lname" value="<%=typeof lname !='undefined'? lname:'' %>" autocomplete='off'>
        </li>
        <li>
            <label for="">Email</label>
            <input type="text" name="email" value="<%=typeof email !='undefined'? email:'' %>" autocomplete='off'>
        </li>
        <li>
            <label for="">Phone</label>
            <input type="text" name="phone" value="<%=typeof phone !='undefined'? phone:''%> " autocomplete='off'>
        </li>
        <li>
            <button id='btn' type="Submit">Submit</button>
        </li>
       </ul>
 </form>
 

